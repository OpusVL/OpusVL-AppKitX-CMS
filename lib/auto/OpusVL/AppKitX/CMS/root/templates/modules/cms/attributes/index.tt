<script language="javascript">
    $(function() {
        var combo_change = function() {
            var parent = $(this).closest('.rep');
            var edit = parent.find('.edit_values');
            var val = $(this).val();
            console.log('select');
            if(val === 'select') {
                console.log(edit);
                edit.detach();
                edit.appendTo(parent.find('.multi'));
            } else {
                edit.remove();
            }
        };
        $('.type_selection').each(combo_change);
    });
</script>
