[% INCLUDE modules/cms/header.tt title="Sites" %]

<div class="content_block">
	[% IF all_sites.size > 0 %]
		<ol>
			[% FOREACH site IN all_sites %]
				<li><strong><a href="[% c.uri_for(c.controller.action_for('edit'), [ site.site.id ]) %]">[% site.site.name %]</a></strong></li>
			[% END %]
		</ol>
	[% ELSE %]
		<p>There are no available sites. <a href="[% c.uri_for(c.controller.action_for('add')) %]">Add one now</a></p>
	[% END %]
</div>
<a class="link_button link_button_add" href="[% c.uri_for(c.controller.action_for('add')) %]">Add Site</a>
